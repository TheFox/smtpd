{
	"name": "thefox/smtpd",
	"description": "SMTP server (library) written in pure PHP.",
	"license": "GPL-3.0",
	"type": "library",
	"keywords": [ "smtp", "email", "mail", "server", "daemon" ],
	"homepage": "http://fox21.at",
	"authors": [
		{
			"name": "Christian Mayer",
			"email": "christian@fox21.at",
			"homepage": "http://fox21.at"
		}
	],
	"require": {
		"php": ">=5.3",
		"zendframework/zend-mail": "~2.3",
		"symfony/console": "~2.5",
		"symfony/filesystem": "~2.5",
		"liip/process-manager": "~1.0",
		"phpmailer/phpmailer": "~5.2"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.1",
		"satooshi/php-coveralls": "dev-master",
		"thefox/phpcsrs": "~1.0",
		"thefox/utilities": "~1.1"
	},
	"autoload": {
		"psr-0": { "TheFox": "src" }
	},
	"autoload-dev": {
		"psr-0": { "TheFox": "tests" }
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.x.x-dev"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"echo post-install-cmd",
			"chmod a+rx-w,u+rwx application.php",
			"php bootstrap.php"
		],
		"post-update-cmd": [
			"echo post-update-cmd",
			"php bootstrap.php"
		]
	}
}