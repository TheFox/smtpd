{
	"name": "thefox/smtpd",
	"description": "SMTP server (library) written in pure PHP.",
	"license": "GPL-3.0",
	"type": "library",
	"keywords": [ "smtp", "email", "mail", "server", "daemon" ],
	"homepage": "http://fox21.at",
	"authors": [
		{
			"name": "Christian Mayer",
			"email": "christian@fox21.at",
			"homepage": "http://fox21.at"
		}
	],
	"require": {
		"php": ">=5.3",
		"zendframework/zend-mail": "~2.3"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.1",
		"thefox/phpcsrs": "~1.0",
		"thefox/utilities": "~1.1",
		"phpmailer/phpmailer": "~5.2"
	},
	"autoload": {
		"psr-0": { "TheFox": "src" }
	},
	"autoload-dev": {
		"psr-0": { "TheFox": "tests" }
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.x.x-dev"
		}
	},
	"scripts": {
        "test": [
        	"@test-phpcs",
        	"@test-phpunit"
        ],
        "test-phpunit": "TEST=true phpunit --coverage-text",
        "test-phpunit-cc": "TEST=true phpunit --coverage-html build/report",
        "test-phpcs": "phpcs -v -s --report=full --report-width=160 --standard=vendor/thefox/phpcsrs/Standards/TheFox src tests"
    }
}